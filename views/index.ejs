<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <title>Book Management System</title>
</head>
<body>
    <div class="head">
    <h1>Book List:</h1>
    </div>
    <ol></ol>
    <table class="form">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Year</th>
            <th>Actions</th>
        </tr>
        <% books.forEach(book => { %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td><%= book.year %></td>
                <td>
                    <a href="/books/edit/<%= book._id %>">Edit</a>
                    <form action="/books/delete/<%= book._id %>" method="post" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </table>
	<a href="/books/new">Add New</a>
    
    <hr>
	
    <div class="Search">
	<p>Search Book:</p>
		<form action="/search" method="get">
		<input type="text" name="author" placeholder="Search by author"><br>
		<input type="number" name="year" placeholder="Search by year"><br>
        <ol></ol>
		<button type="submit">Search</button>
    </div>

    <a href="/logout">Logout</a></td>
	
</body>
</html>
