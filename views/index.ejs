<!DOCTYPE html>
<html>
<head>
    <title>Book Management System</title>
</head>
<body>
    <h1>Book List:</h1>
    <table>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Year</th>
            <th>Actions</th>
        </tr>
        <% books.forEach(book => { %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td><%= book.year %></td>
                <td>
                    <a href="/books/edit/<%= book._id %>">Edit</a>
                    <form action="/books/delete/<%= book._id %>" method="post" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </table>
	<a href="/books/new">Add New</a>
	
	<h1>Search Book:</h1>
		<form action="/search" method="get">
		<input type="text" name="author" placeholder="Search by author">
		<input type="number" name="year" placeholder="Search by year">
		<button type="submit">Search</button>
	<table>
	<td><a href="/logout">Logout</a></td>
	</table>
</body>
</html>
